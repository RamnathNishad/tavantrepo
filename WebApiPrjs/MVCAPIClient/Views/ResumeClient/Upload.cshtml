@{
}
<h2>Upload File</h2>

<form asp-controller="ResumeClient" asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Select File:</label>
        <input type="file" name="file" class="form-control" required />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

@if (ViewBag.Message != null)
{
    <p class="alert alert-success">@ViewBag.Message</p>
}


<div class="form-group">
    @Html.ActionLink("Download File","Download","ResumeClient",new {fileName=ViewData["fileName"]});
</div>
